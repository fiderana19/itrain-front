{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types" : ["realm"],
    "moduleResolution" : "node",
    "resolveJsonModule" : true ,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
